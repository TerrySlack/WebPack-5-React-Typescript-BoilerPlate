{
  "name": "weather-app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "predev": "yarn prep",
    "build:css:dev": "npx tailwindcss -i ./src/index.css -o ./src/tailwind.css --watch",
    "dev-build": "cross-env NODE_ENV=development webpack serve --config config/webpack.dev.js",
    "dev": "concurrently --kill-others-on-fail \"yarn dev-build\" \"yarn build:css:dev\"",
    "dev-old": "cross-env NODE_ENV=development webpack serve --config config/webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.prod.js",
    "build-storybook": "cross-env storybook build",
    "lint": "eslint --ext 'mjs,js,jsx,ts,tsx' --max-warnings=0 --fix",
    "lint-staged": "lint-staged",
    "prepare-husky": "husky",
    "prep": "yarn && yarn prepare-husky",
    "storybook": "cross-env storybook dev -p 6006"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged  && git add --all"
    }
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "eslint --max-warnings=0 --fix --ignore-pattern \"!/.storybook\"",
      "prettier --write"
    ]
  },
  "resolutions": {
    "cliui": "7.0.2"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.5.0",
    "@tanstack/react-query": "^5.64.1",
    "axios": "^1.7.9",
    "deep-equal": "^2.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@jest/types": "^29.6.3",
    "@storybook/addon-actions": "^8.5.0",
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/addon-interactions": "^8.5.0",
    "@storybook/addon-links": "^8.5.0",
    "@storybook/react": "^8.5.0",
    "@storybook/react-webpack5": "^8.5.0",
    "@storybook/testing-library": "^0.2.2",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@types/react-redux": "^7.1.34",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-test-renderer": "^19.0.0",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.2.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "dotenv-webpack": "^8.1.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.0.1",
    "eslint-formatter-table": "^7.32.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-webpack": "^0.13.10",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-storybook": "^0.11.2",
    "eslint-webpack-plugin": "^4.2.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.1",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.1",
    "postcss-easings": "^4.0.0",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.1.3",
    "prettier": "^3.4.2",
    "react-test-renderer": "^19.0.0",
    "redux-mock-store": "^1.5.5",
    "storybook": "8.5.0",
    "storybook-dark-mode": "^4.0.2",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "terser-webpack-plugin": "^5.3.11",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0",
    "webpack-merge": "^6.0.1",
    "worker-loader": "^3.0.8"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ],
      [
        "@babel/preset-react"
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "syntax-dynamic-import",
      "transform-class-properties"
    ]
  },
  "jest": {
    "coverageDirectory": "dist/test-results",
    "setupFilesAfterEnv": [
      "<rootDir>/stories/setupTests.js"
    ],
    "transform": {
      "\\.(js|ts|tsx)": "ts-jest",
      "\\.(js|jsx)": "babel-jest",
      ".svg": "<rootDir>/__mocks__/mockModule.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "Assets/(.*)": "<rootDir>/src/shared/assets/$1",
      "Components/(.*)": "<rootDir>/src/shared/components/$1",
      "Containers/(.*)": "<rootDir>/src/shared/containers/$1",
      "Hooks/(.*)": "<rootDir>/src/shared/hooks/$1",
      "Providers/(.*)": "<rootDir>/src/shared/providers/$1",
      "Selectors/(.*)": "<rootDir>/src/shared/selectors/$1",
      "Store/(.*)": "<rootDir>/src/shared/store/$1",
      "Utils/(.*)": "<rootDir>/src/shared/utils/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 4,
        "functions": 4,
        "lines": 4,
        "statements": 4
      }
    }
  }
}
